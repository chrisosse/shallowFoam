FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volVectorField;
    object          HU;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 2 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
   leftWall
    {
        type	   fixedValue;
        value      uniform (0 0 0);
    }

    rightWall
    {
        type       fixedValue;
        value      uniform (-7 0 0);
    }

    bottomWall
    {
        type       empty;
    }

    atmosphere
    {
        type       empty;
    }

    sides
    {
        type       empty;
    }

}


