<?xml version="1.0"?>

<precice-configuration>

    <solver-interface dimensions="3">

    <data:scalar name="Alpha"/>
    <data:vector name="Velocity"/>
    <data:scalar name="Prgh"/>

    <mesh name="left-Mesh">  
        <use-data name="Alpha"/>   
        <use-data name="Velocity"/>   
        <use-data name="Prgh"/>   
    </mesh>

    <mesh name="right-Mesh">   
        <use-data name="Alpha"/>   
        <use-data name="Velocity"/>   
        <use-data name="Prgh"/> 
    </mesh>

    <participant name="leftIF">
        <use-mesh name="left-Mesh" provide="yes"/>
        <use-mesh name="right-Mesh" from="rightSF"/>
        <read-data name="Alpha" mesh="left-Mesh"/>
        <read-data name="Velocity" mesh="left-Mesh"/>
        <!--<read-data name="Prgh" mesh="left-Mesh"/>-->
    </participant>

    <participant name="rightSF">
        <use-mesh name="right-Mesh" provide="yes"/>
        <use-mesh name="left-Mesh" from="leftIF"/>
        <write-data name="Alpha" mesh="right-Mesh"/>
        <write-data name="Velocity" mesh="right-Mesh"/>
        <!--<write-data name="Prgh" mesh="right-Mesh"/>-->
	<mapping:nearest-neighbor direction="write" from="right-Mesh" to="left-Mesh" 		constraint="consistent" />
    </participant>

    <m2n:sockets from="rightSF" to="leftIF" exchange-directory=".." />

    <coupling-scheme:serial-explicit>
        <time-window-size value="0.005"/>
        <max-time value="2.0"/>
        <participants first="rightSF" second="leftIF"/>
        <exchange data="Alpha" mesh="left-Mesh" from="rightSF" to="leftIF"/>
        <exchange data="Velocity" mesh="left-Mesh" from="rightSF" to="leftIF"/>
        <!--<exchange data="Prgh" mesh="left-Mesh" from="rightSF" to="leftIF"/>-->
    </coupling-scheme:serial-explicit>

    </solver-interface>
</precice-configuration>
