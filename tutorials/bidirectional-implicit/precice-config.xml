<?xml version="1.0"?>

<precice-configuration>

    <solver-interface dimensions="3">

    <data:scalar name="Alpha"/>
    <data:vector name="Velocity"/>
    <data:vector name="VelocityGradient"/>
    <data:vector name="Prgh"/>

    <mesh name="left-Mesh"> 
        <use-data name="Alpha"/>   
        <use-data name="Velocity"/> 
        <use-data name="VelocityGradient"/>   
        <use-data name="Prgh"/>   
    </mesh>

    <mesh name="right-Mesh">  
        <use-data name="Alpha"/>   
        <use-data name="Velocity"/>   
        <use-data name="VelocityGradient"/>
        <use-data name="Prgh"/>   
    </mesh>

    <participant name="leftIF">
        <use-mesh name="left-Mesh" provide="yes"/>
        <use-mesh name="right-Mesh" from="rightSF"/>
        <write-data name="Alpha" mesh="left-Mesh"/>
        <write-data name="Velocity" mesh="left-Mesh"/>
	<read-data name="VelocityGradient" mesh="left-Mesh"/>
	<!--<read-data name="Prgh" mesh="left-Mesh"/>-->
	<mapping:nearest-neighbor direction="write" from="left-Mesh" to="right-Mesh" 		constraint="consistent" />
    </participant>

    <participant name="rightSF">
        <use-mesh name="right-Mesh" provide="yes"/>
        <use-mesh name="left-Mesh" from="leftIF"/>
        <read-data name="Alpha" mesh="right-Mesh"/>
        <read-data name="Velocity" mesh="right-Mesh"/>
        <write-data name="VelocityGradient" mesh="right-Mesh"/>
        <!--<write-data name="Prgh" mesh="right-Mesh"/>-->
	<mapping:nearest-neighbor direction="write" from="right-Mesh" to="left-Mesh" 		constraint="consistent" />
    </participant>

    <m2n:sockets from="leftIF" to="rightSF" exchange-directory=".." />
S
    <coupling-scheme:parallel-explicit>
        <time-window-size value="0.005"/>
        <max-time value="2.0"/>
        <participants first="leftIF" second="rightSF"/>
        <exchange data="Alpha" mesh="right-Mesh" from="leftIF" to="rightSF"/>
        <exchange data="Velocity" mesh="right-Mesh" from="leftIF" to="rightSF"/>
        <exchange data="VelocityGradient" mesh="left-Mesh" from="rightSF" to="leftIF"/>
	<!--<exchange data="Prgh" mesh="left-Mesh" from="rightSF" to="leftIF"/>-->


    </coupling-scheme:parallel-explicit>

    </solver-interface>
</precice-configuration>
