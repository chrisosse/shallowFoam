FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volVectorField;
    object          HU;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 2 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    front
    {
        type       flowRateInlet;
        flowRate   1.5;
        value      uniform (0 0 0);
    }

    back
    {
        type       dischargeFlowDepthOutlet;
        value      uniform (0 0 0);
    }

    right
    {
        type       empty;
    }

    left
    {
        type       empty;
    }

    TopAndBot
    {
        type       empty;
    }

}


